<!doctype html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Cadastrar Cardápio - RU ICET</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.4/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/navbar.css"> <!-- adicionada -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/cadastroCardapio.js" defer></script>
  <style>
    .day-column { min-height: 160px; }
    .dish-item { cursor: grab; }
    .prato-do-dia-badge { transform: translateY(-2px); }
    .cardapio-actions { gap: .5rem; }
    .select-prato { max-width: 100%; }
    .placeholder-empty { opacity: .6; font-style: italic; }
  </style>
</head>
<body>
<nav class="navbar navbar-expand-lg app-navbar mb-4"> <!-- classe alterada -->
  <div class="container">
    <a class="navbar-brand" href="/">RU ICET</a>
    <div class="d-flex">
      <a class="btn btn-outline-secondary me-2" href="/">Home</a>
      <a class="btn btn-outline-secondary me-2" href="/cardapio/pratos">Cadastrar Prato</a>
      <a class="btn btn-outline-danger me-2" href="/logout">Logout</a>
    </div>
  </div>
</nav>

<div class="container">
  <% if (typeof mensagem !== 'undefined' && mensagem) { %>
    <div class="alert alert-info"><%= mensagem %></div>
  <% } %>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Cadastrar Cardápio Semanal</h3>
    <small class="text-muted">Adicione pratos por dia e marque o <strong>Prato do Dia</strong>.</small>
  </div>

  <form id="cardapioForm" action="/cardapio/cadastrar" method="post" class="needs-validation" novalidate>
    <div class="row g-3 mb-3">
      <div class="col-12 col-md-4">
        <label for="dia_inicio" class="form-label">Dia inicial</label>
        <input id="dia_inicio" name="dia_inicio" type="date" class="form-control" required>
        <div class="invalid-feedback">Informe a data inicial do cardápio.</div>
      </div>
      <div class="col-12 col-md-4">
        <label for="dia_final" class="form-label">Dia final</label>
        <input id="dia_final" name="dia_final" type="date" class="form-control" required>
        <div class="invalid-feedback">Informe a data final do cardápio.</div>
      </div>
      <div class="col-12 col-md-4 d-flex align-items-end">
        <div class="form-text">Selecione pratos da lista para cada dia. É possível adicionar múltiplos pratos por dia.</div>
      </div>
    </div>

    <div class="row g-3 mb-4">
      <% const dias = ['segunda','terça','quarta','quinta','sexta']; %>
      <% dias.forEach(function(dia) { %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
              <strong class="text-capitalize"><%= dia %></strong>
              <small class="text-muted">Arraste para ordenar</small>
            </div>
            <div class="card-body day-column d-flex flex-column">
              <div class="mb-2">
                <div class="input-group">
                  <select class="form-select select-prato" data-dia="<%= dia %>">
                    <option value="" selected>Selecionar prato...</option>
                    <% (pratos || []).forEach(function(p) { %>
                      <option value="<%= p.id %>" data-nome="<%= p.nome %>"><%= p.nome %></option>
                    <% }) %>
                  </select>
                  <button type="button" class="btn btn-success" onclick="addPrato('<%= dia %>')" title="Adicionar prato"><i class="bi bi-plus-lg"></i></button>
                </div>
              </div>

              <div class="list-group flex-grow-1 mb-2" id="lista-<%= dia %>">
                <div class="list-group-item placeholder-empty">Nenhum prato adicionado para <strong class="text-capitalize"><%= dia %></strong>.</div>
              </div>

              <div class="d-flex justify-content-between align-items-center">
                <div class="form-check">
                  <!-- toggle por dia: permite marcar 1 prato do dia naquele dia -->
                  <input class="form-check-input prato-do-dia-toggle" type="checkbox" data-dia="<%= dia %>">
                  <label class="form-check-label small">Marcar prato do dia</label>
                </div>
                <div class="small text-muted">Use as setas para ordenar</div>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- campo oculto que conterá o JSON do cardápio montado pelo JS -->
    <input type="hidden" name="cardapio_json" id="cardapio_json">

    <div class="d-flex justify-content-end cardapio-actions">
      <button type="reset" class="btn btn-outline-secondary">Limpar</button>
      <button type="submit" class="btn btn-primary">Salvar Cardápio</button>
    </div>
  </form>
</div>


</body>
</html>